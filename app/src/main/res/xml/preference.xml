<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="微信QQ">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="autoincrement"
            android:summaryOff="倍率增加"
            android:summaryOn="自动增加"
            android:title="修改方式" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="weixin"
            android:summaryOff="关闭"
            android:summaryOn="开启"
            android:title="微信运动修改" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="weixinDisable"
            android:summaryOff="关闭"
            android:summaryOn="开启"
            android:title="微信步数不变(需开启微信运动修改)" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="qq"
            android:summaryOff="关闭"
            android:summaryOn="开启"
            android:title="QQ健康步数修改" />
        <Preference
            android:summary="自动增加=步数+自增变量*倍率，倍率增加=步数*倍率。\n注意：使用自动增加可能导致QQ不刷新，请自行测试！"
            android:title="使用说明" />
    </PreferenceCategory>

    <PreferenceCategory android:title="全局设定">
        <EditTextPreference
            android:defaultValue="1"
            android:inputType="number"
            android:key="weixin_magnification"
            android:summary="1"
            android:title="微信倍率" />
        <EditTextPreference
            android:defaultValue="1"
            android:inputType="number"
            android:key="qq_magnification"
            android:summary="1"
            android:title="QQ倍率" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="icon"
            android:summaryOff="不显示"
            android:summaryOn="显示"
            android:title="是否显示图标" />
        <Preference
            android:summary="倍率仅代表修改幅度，不精确修改数值"
            android:title="使用说明" />
        <Preference
            android:key="version"
            android:summary="1.2.11"
            android:title="关于"></Preference>
    </PreferenceCategory>

</PreferenceScreen>
